                           VerticalOptions="Center" HorizontalOptions="CenterAndExpand" IsRunning="False" />

                <Label Text="" FontSize="Default" FontAttributes="Bold" TextColor="Red" IsVisible="False" HorizontalOptions="Center"
                   VerticalOptions="Center" x:Name="LblImg"/>

                <StackLayout Grid.Row="0" VerticalOptions="CenterAndExpand">
                    <Image x:Name="showImage" Aspect="AspectFit" Margin="0"/>
                </StackLayout>


